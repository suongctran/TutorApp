<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetAppointment"
    android:background="#3eaddd">

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/date_edit_text"
        android:layout_above="@+id/appointment_button"
        android:layout_alignLeft="@+id/subject_name_text_view"
        android:layout_alignStart="@+id/subject_name_text_view"
        android:hint="YYYY-MM-DD" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/tutor_name_text_view"
        android:layout_above="@+id/subject_name_text_view"
        android:layout_alignLeft="@+id/subject_name_text_view"
        android:layout_alignStart="@+id/subject_name_text_view"
        android:text="tutor" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/subject_name_text_view"
        android:layout_above="@+id/date_edit_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="subject" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#000"
        android:text="set appointment"
        android:id="@+id/appointment_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/date_edit_text"
        android:layout_alignStart="@+id/date_edit_text"
        android:onClick="onSetAppointmentClick"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textView10"
        android:textColor="#fff"
        android:layout_above="@+id/subject_name_text_view"
        android:layout_toLeftOf="@+id/tutor_name_text_view"
        android:layout_toStartOf="@+id/tutor_name_text_view"
        android:text="Tutor"
        android:textAlignment="center" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textView11"
        android:textColor="#fff"
        android:layout_below="@+id/tutor_name_text_view"
        android:layout_toLeftOf="@+id/date_edit_text"
        android:layout_toStartOf="@+id/date_edit_text"
        android:text="Subject"
        android:textAlignment="center" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textView12"
        android:textColor="#fff"
        android:layout_above="@+id/appointment_button"
        android:layout_toLeftOf="@+id/date_edit_text"
        android:layout_toStartOf="@+id/date_edit_text"
        android:textAlignment="center"
        android:text="Date" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/invalid_date_text"
        android:layout_below="@+id/appointment_button"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Invalid date"
        android:textColor="#FF0000" />
</RelativeLayout>
